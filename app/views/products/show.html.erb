<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <h2>Reviews</h2>
      <div class="col-sm-3">
          <h4>Username</h4>
        </div>
        <div class="col-sm-3">
          <h4>Star Rating</h4>
        </div>
        <div class="col-sm-6">
          <h4>Description</h4>
        </div>
      <div class="col-sm-12"></div>
      <% @product.reviews.each do |review| %>
        <div class="col-sm-3">
          <h5><%= review.user.first_name %></h5>
        </div>
        <div class="col-sm-3">
          <div>
          <% for i in 0..review.rating %>
            â˜…
          <% end %>
          </div>
        </div>
        <div class="col-sm-6">
          <%= review.description %>
        </div>
        <div class="col-sm-12"></div>
      <% end %>
    </div>
    <div class="row">
      <%= form_for [@product, @review] do |f| %>
        <% if @review.errors.any? %>
          <div>
            <h2><%= pluralize(@review.errors.count, "error") %> stopped this review</h2>
            <ul>
              <% @review.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <% star_rating = (0..5).map { |num| [num]} %>
          <%= f.label :rating %>
          <%= f.select :rating, class: "form-control" do %>
            <%= options_for_select star_rating %>
          <% end %>
        </div>
        <%= f.submit "Send Review", class: "btn btn-primary" %>
      <% end %>
    </div>

  </article>

</section>
