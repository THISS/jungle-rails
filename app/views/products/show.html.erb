<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <h2>Reviews</h2>
      <div class="col-sm-3">
          <h4>Username</h4>
        </div>
        <div class="col-sm-3">
          <h4>Star Rating</h4>
        </div>
        <div class="col-sm-6">
          <h4>Description</h4>
        </div>
      <div class="col-sm-12"></div>
      <% @reviews.order(updated_at: :DESC).each do |review| %>
        <div class="col-sm-3">
          <h5><%= review.user.first_name %></h5>
        </div>
        <div class="col-sm-3">
          <div>
          <% for i in 0..review.rating - 1 %>
            â˜…
          <% end %>
          </div>
        </div>
        <div class="col-sm-5">
          <%= review.description %>
        </div>
        <div class="col-sm-1">
          <%= link_to("X", review, method: :delete) unless (review.user != current_user) %>
        </div>
        <div class="col-sm-12"></div>
      <% end %>
    </div>
    <% if current_user %>
      <%= render "review_form", product: @product, review: @review %>
    <% end %>
  </article>

</section>
